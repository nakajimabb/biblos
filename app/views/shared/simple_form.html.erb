<h3><%= @title %></h3>

<%= form_tag({:action => @action}, :multipart => true) do %>
  <div class="form-inline">
    <% if @enable_file %>
      <div class="form-grousimple_formp">
        <%= file_field_tag :file %>
      </div>
    <% end %>
    <% if @enable_module_code %>
      <%= text_field_tag :module_code, params[:module_code], placeholder: 'module_code', class: 'form-control' %>
    <% end %>
    <%= submit_tag '実行', class: 'btn btn-primary' %>
  </div>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |message| %>
    <%= message %> <br>
  <% end %>
<% end %>
